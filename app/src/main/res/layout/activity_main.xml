<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



        <androidx.cardview.widget.CardView
            android:id="@+id/cv1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Package &amp;Shopping"
                android:textColor="#000000"
                android:textSize="20dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv2"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/cv1">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:src="@drawable/package1" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="15dp"
                android:text="1.50 kg"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="35dp"
                android:text="weight/piece"
                android:textColor="#FF8C8686"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="55dp"
                android:text="20cm*15cm*10cm"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv5"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="75dp"
                android:text="size/piece"
                android:textColor="#FF8C8686"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/tv6"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="95dp"
                android:text="Ship out within 5Days"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv7"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="115dp"
                android:text="Processing Time"
                android:textColor="#FF8C8686"
                android:textSize="11dp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/cv2">

            <TextView
                android:id="@+id/tv8"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text="Ship Address"
                android:textSize="17dp" />

            <ImageView
                android:id="@+id/tv9"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:src="@drawable/next" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv4"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/cv3">

            <TextView
                android:layout_width="130dp"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"
                android:text="Delivery Method"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv10"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:text="Delivery Time"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv11"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="25dp"
                android:paddingTop="5dp"
                android:text="Cost"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv12"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="25dp"
                android:paddingTop="5dp"
                android:text="Tracking Carrier"
                android:textSize="14dp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/cv4">

            <TextView
                android:id="@+id/tv13"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text="8.15 Days"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv14"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_marginLeft="120dp"
                android:paddingTop="5dp"
                android:text="Ks-5,000"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv15"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_marginLeft="220dp"
                android:paddingTop="5dp"
                android:text="MGL Delivery"
                android:textSize="14dp" />

            <RadioGroup
                android:id="@+id/rg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right">

                <RadioButton
                    android:id="@+id/rb1"
                    android:layout_width="30dp"
                    android:layout_height="35dp" />

                <RadioButton
                    android:id="@+id/rb2"
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="15dp" />
            </RadioGroup>

            <TextView
                android:id="@+id/tv16"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:gravity="center_vertical"
                android:text="8.15 Days"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv17"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="50dp"
                android:paddingTop="5dp"
                android:text="Ks-5,000"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv18"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="50dp"
                android:paddingTop="5dp"
                android:text="MGL Delivery"
                android:textSize="14dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv6"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@id/cv5">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#FF8C8686"
                app:layout_constraintTop_toBottomOf="@id/cv5" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv7"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintTop_toBottomOf="@id/cv6"
            android:layout_marginTop="2dp">

            <Button
                android:id="@+id/bt1"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginTop="8dp"
                android:layout_marginRight="30dp"
                android:background="#EF3F3F"
                android:text="Apply"
                />


        </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>